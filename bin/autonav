#!/usr/bin/env bash

source bot-funcs.sh

echo "autonav"
echo
echo "Automatically navigate to the nearest planet/station and dock"
echo

init_oolite_window

pause_shell "Press [Enter] when you're ready"

function navigate_to_station() {
    is_station_in_range

    while [ $? -eq 1 ]; do
        wait_for 1
        vert_align_with_station
        wait_for 1
        horz_align_with_station

        is_station_in_range
    done
}

navigate_to_station
dock

echo "Thank you for flying AutoNav spacelines"
echo

